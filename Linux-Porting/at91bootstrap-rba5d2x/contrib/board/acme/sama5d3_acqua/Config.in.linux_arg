config CONFIG_LINUX_KERNEL_ARG_STRING
	default "console=ttyS0,115200 mtdparts=atmel_nand:8M(bootstrap/kernel)ro,-(rootfs) rw rootfstype=ubifs ubi.mtd=1 root=ubi0:rootfs" if CONFIG_SAMA5D3_ACQUA && !CONFIG_SDCARD
	default "mem=256M console=ttyS0,115200 root=/dev/mmcblk0p2 rw rootfstype=ext4 rootwait" if CONFIG_SAMA5D3_ACQUA && CONFIG_SDCARD && CONFIG_RAM_256MB
	default "mem=512M console=ttyS0,115200 root=/dev/mmcblk0p2 rw rootfstype=ext4 rootwait" if CONFIG_SAMA5D3_ACQUA && CONFIG_SDCARD && CONFIG_RAM_512MB
